\fi%
	#2\par\nointerlineskip\nobreak%
\vskip4pt\smash{\rule{3pt}{\sectionhtdp}\rule{27.75pc}{.5pt}}}\par%
    \nobreak
    \vskip 4pt
    \@afterheading}

